<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Connection Status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/sensor_disconnected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Data Rate -->
    <TextView
        android:id="@+id/dataRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Hz"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan/Connect Button -->
    <Button
        android:id="@+id/connectButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_for_sensor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dataRateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kick Indicator -->
    <View
        android:id="@+id/kickIndicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/connectButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/kickText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/kickIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Current Sound -->
    <TextView
        android:id="@+id/currentSoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Sound:"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/kickText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentSoundText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="None"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/currentSoundLabel"
        app:layout_constraintBottom_toBottomOf="@id/currentSoundLabel"
        app:layout_constraintStart_toEndOf="@id/currentSoundLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Collection Selector -->
    <TextView
        android:id="@+id/collectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection:"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/currentSoundLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/collectionSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="@id/collectionLabel"
        app:layout_constraintBottom_toBottomOf="@id/collectionLabel"
        app:layout_constraintStart_toEndOf="@id/collectionLabel"
        app:layout_constraintEnd_toStartOf="@id/addCollectionButton" />

    <Button
        android:id="@+id/addCollectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="16sp"
        android:minWidth="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/collectionLabel"
        app:layout_constraintBottom_toBottomOf="@id/collectionLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sound Library Grid -->
    <TextView
        android:id="@+id/soundLibraryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound_library"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/collectionSpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addSoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Sound"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/soundLibraryLabel"
        app:layout_constraintBottom_toBottomOf="@id/soundLibraryLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/soundLibraryGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/soundLibraryLabel"
        app:layout_constraintBottom_toTopOf="@id/upperThresholdLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sensitivity Controls -->
    <TextView
        android:id="@+id/upperThresholdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upper_threshold"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/upperThresholdSlider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/upperThresholdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5g"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/upperThresholdLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/upperThresholdSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="40"
        android:progress="15"
        app:layout_constraintBottom_toTopOf="@id/lowerThresholdLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lowerThresholdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lower_threshold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/lowerThresholdSlider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lowerThresholdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.1g"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/lowerThresholdLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/lowerThresholdSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="20"
        android:progress="2"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
